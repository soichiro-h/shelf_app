
  <%= form_for(@book) do |f| %>
  
  <input type="hidden" name="user_id" value="<%= @user.id %>">
  
  <div class="row">
    <div class="col-3">  
      <!--image-->
      <%= image_tag 'book_sample.jpeg', class:"book_image" %> 
    </div>
    
    <div class="col-9">  
      <div class="row justify-content-between">
        <div class="col-5">
          <!--title-->
          <div class="field">
            <%= f.label :title, class:"form_notitle" %>
            <%= f.text_field :title, value:"#{params[:new_book_title]}", class:"underlined_form" %>
          </div>
        </div>
        
        <div class="col-4">
          <!--price-->
          <div class="field">
            <%= f.label :￥, class:"price_label" %>
            <%= f.text_field :price, class:"price_field underlined_form" %>
          </div>
        </div>
      </div>
      
      <div class="row justify-content-start">
        <!--proper_title-->
        <%= f.label :proper_title, class:"form_notitle" %>
        <%= f.text_field :proper_title, placeholder:"proper_title", class:"underlined_form" %>
      </div>
      
      <div class="row justify-content-start">
        <!--author-->
        <%= f.label :author, class:"form_notitle" %>
        <%= f.text_field :author, placeholder:"author", class:"underlined_form" %>
      </div>
    </div>
  </div>
  
  <div class="row justify-content-start">
    <!--file-->
    <%= f.file_field :image, class: "img_uploader uploader_info" %>
    <p class="uploader_info">※画像を変更する場合はファイルを選択してください</p>
  </div>
  
  <div class="row justify-content-center">
    <!--memo-->
    <div class="field">
      <%= f.label :メモ, class:"standard_form_label" %><br />
      <%= f.text_area :memo, class:"standard_form form_textarea" %>
    </div>
  </div>  
  
  <div class="row justify-content-center">
    <!--summary-->
    <div class="field">
      <%= f.label :要約, class:"standard_form_label" %><br />
      <%= f.text_area :summary, class:"standard_form form_textarea" %>
    </div>
  </div>
  
  
  
  <div class="section video_seciton">
    
    <div class="row justify-content-start">
      <h5 class="section_title">関連動画</h5>
      <button type="button" id="btn_plus_video" class="btn-plus" onclick="addVideo_url()">
      <%= image_tag 'plus_small.png' %></button>
    </div>
  
    <div class="row justify-content-center">
      <!--videos-->
      
      <div id="vf_1" class="col-12 video_url_field">
        <input type="text" class="video_url" name="[videos][1]" value="https://www.youtube.com/watch?v=BuMA_jz-_Tg" >
        <button type="button" id="1" class="delete_video" onclick="deleteVideo_url(this);" >
        <i class="fas fa-times"></i></button>
      </div>
      
      <div id="vf_2" class="col-12 video_url_field">
        <input type="text" class="video_url" name="[videos][2]" value="https://www.youtube.com/watch?v=8WKwKT7Rdq8" >
        <button type="button" id="2" class="delete_video" onclick="deleteVideo_url(this);" >
        <i class="fas fa-times"></i></button>
      </div>
      
      <div id="last"></div>
    </div>
    
  </div>
  
  <div class="section tag_section">
  
    <div class="row justify-content-start">
      <!--tags-->
      <h5 class="section_title"><i class="fas fa-tags"></i>タグ</h5>
    </div> 
     
     <%= render 'books/tags_index' %> 
    
  </div>
  
  <div class="row justify-content-start section_own-fav">
    
    <!--own-->
    <div class="">
      <div class="wrapper">
        <%= f.check_box :own, id: "own_checkbox" %>
        <%= f.label :入手済み, for: "own_checkbox", class: "own_label labels" %>
      </div>
    </div>
      
    <!--fav-->
    <div class="">
      <div class="wrapper">
        <%= f.check_box :favorite, id: "fav_checkbox" %>
        <%= f.label :お気に入り, for: "fav_checkbox", class: "fav_label labels" %>
      </div>
    </div>
    
  </div>
  
  <div class="row justify-content-end">
    <!--submit-->
    <button type="button" class="btn btn-secondary" onclick="toBackPage()" >戻る</button>
    <button type="button" class="btn btn_skyblue" onclick="submit()" >保存</button>
  </div>
  
  <% end %>
  