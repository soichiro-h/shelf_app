

<div id="login_page" class="container">
  
  <div class="row justify-content-center">
      <h4 id ="login_title" class="default_title">ログイン</h4>
  </div>
  
  <div class="row justify-content-center">  
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>　<!-- user_session_path でも行けた-->
    <div class="field">
      <%= f.label :メールアドレス, class: "standard_form_label" %><br />
      <%= f.email_field :email, class: "standard_form" , autocomplete: "email" %>
    </div>
  </div>

  <div class="row justify-content-center">
    <div class="field">
      <%= f.label :パスワード,class: "standard_form_label" %><br />
      <%= f.password_field :password, class: "standard_form", autocomplete: "current-password" %>
    </div>
  </div>


  <div class="row justify-content-center">
    <div class="actions">
      <%= f.submit "ログイン", class: "btn_form_submit btn_skyblue btn" %>
    </div>
  <% end %>
  </div>

  <div class="wrapper_form_aux">

    <div class="row justify-content-center">
      <%= link_to "パスワードをお忘れの方はこちら", new_password_path(resource_name) %><br />
    </div>
    
    <div class="row justify-content-center">
      <div class="line"></div>
    </div>
    
    <div class="row justify-content-center">
      <%= link_to "新規登録はこちら", new_registration_path(resource_name) %><br />
    </div>
  
  </div>

</div>
